package com.example.plantrack;

import android.os.Bundle;
import android.app.Activity;
import android.app.TabActivity;
import android.content.Intent;
import android.view.Menu;
import android.widget.TabHost;
import android.widget.TabHost.TabSpec;

public class MainActivity extends TabActivity {
	private TabHost tabHost;

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_main);
		tabHost = getTabHost();
		
	    // Tab for Planner
        TabSpec plannerspec = tabHost.newTabSpec("Planner");
        // setting Title and Icon for the Tab
        plannerspec.setIndicator("Planner", getResources().getDrawable(R.drawable.ic_launcher));
        Intent plannerIntent = new Intent(this, Planner.class);
        plannerspec.setContent(plannerIntent);
        
     // Tab for Grades
        TabSpec gradesspec = tabHost.newTabSpec("Grades");
        // setting Title and Icon for the Tab
        gradesspec.setIndicator("Grades", getResources().getDrawable(R.drawable.ic_launcher));
        Intent gradesIntent = new Intent(this, Grades.class);
        gradesspec.setContent(gradesIntent);
        
        // Tab for GPA
        TabSpec gpaspec = tabHost.newTabSpec("GPA");
        // setting Title and Icon for the Tab
        gpaspec.setIndicator("GPA", getResources().getDrawable(R.drawable.ic_launcher));
        Intent gpaIntent = new Intent(this, Gpa.class);
        gpaspec.setContent(gpaIntent);
        
        tabHost.addTab(plannerspec);
        tabHost.addTab(gradesspec);
        tabHost.addTab(gpaspec);
	}

	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
		// Inflate the menu; this adds items to the action bar if it is present.
		//pager = (ViewPager) findViewById(R.id.viewpager);
		getMenuInflater().inflate(R.menu.main, menu);
		return true;
	}

}
