package com.example.plantrack;

import java.util.ArrayList;
import android.app.Activity;
import android.content.Context;
import android.content.Intent;
import android.os.Bundle;
import android.view.Menu;
import android.view.View;
import android.view.View.OnClickListener;
import android.view.inputmethod.InputMethodManager;
import android.widget.AdapterView;
import android.widget.AdapterView.OnItemClickListener;
import android.widget.Button;
import android.widget.ListView;


public class Grades extends Activity {	

	private Menu m_vwMenu;
	private classAdapter classAdapter;
	protected ArrayList<Class> arrClassList;
	private Class c;
	ListView gradeLayout;
	Button addClass;
	Button classButton;
	
	public void onCreate(Bundle savedInstanceState) {
       super.onCreate(savedInstanceState);
       this.arrClassList = new ArrayList<Class>();
       setContentView(R.layout.grades_layout);
       this.gradeLayout = (ListView) findViewById(R.id.ClassListViewGroup);
       this.classAdapter = new classAdapter(this, this.arrClassList);
       this.gradeLayout.setAdapter(this.classAdapter);
       addClass =(Button) findViewById(R.id.addClassButton);
       initListener();
    }
	private void initListener() {
		this.addClass.setOnClickListener(new OnClickListener(){

			@Override
			public void onClick(View arg0) {
				Intent i = new Intent(Grades.this, AddClassView.class);
				startActivityForResult(i, 1);				
			}
			
		});
		 this.gradeLayout.setOnItemClickListener(new OnItemClickListener(){

			@Override
			public void onItemClick(AdapterView<?> arg0, View arg1, int arg2,
					long arg3) {	
				Intent i = new Intent(Grades.this, ItemView.class);
				startActivity(i);
				
			} 
		 });	
	}
	protected void onActivityResult(int requestCode, int resultCode, Intent data) {
		  if (requestCode == 1) {
		     if(resultCode == RESULT_OK){      
		         String result = data.getStringExtra("result");
		         c = new Class(result);
	        	 arrClassList.add(c);
	        	 classAdapter.notifyDataSetChanged();          
		     }
		     if (resultCode == RESULT_CANCELED) {    
		         //Write your code if there's no result
		     }
		  }
		}//onActivityResult
}
