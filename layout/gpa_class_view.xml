<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    	<TextView
    	    android:id="@+id/textView1"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_weight="0.05"
    	    android:text="@string/gpa_class"
    	    android:textSize="30px" />

   		<EditText
   		    android:id="@+id/name"
   		    android:layout_width="0dp"
   		    android:layout_height="wrap_content"
   		    android:layout_weight="0.75"
   		    android:ems="10"
   		    android:singleLine="true"
   		    android:imeOptions="actionNext"
   		    android:hint="@string/gpa_class_hint"
   		    android:textSize="30px" >

            <requestFocus />
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/gpa_grade" 
            android:textSize="30px"/>

        <EditText
            android:id="@+id/grade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:digits="0123456789."
            android:singleLine="true"
   		    android:imeOptions="actionNext"
            android:inputType="numberDecimal" 
            android:hint="@string/gpa_grade_hint"
            android:textSize="30px">

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/gpa_units" 
            android:textSize="30px"/>

        <EditText
            android:id="@+id/units"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:digits="0123456789"
            android:singleLine="true"
   		    android:imeOptions="actionDone"
            android:inputType="number" 
            android:hint="@string/gpa_units_hint"
            android:textSize="30px"/>
    </LinearLayout>

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/class_add" />

</LinearLayout>
